<ivysettings>

	<property name="repo.maven.org" value="http://repo1.maven.org/maven2/" override="false" />
	<property name="snapshot.apache.org" value="http://people.apache.org/repo/m2-snapshot-repository/" override="false" />
	<property name="maven2.pattern" value="[organisation]/[module]/[revision]/[module]-[revision]" />
	<property name="maven2.pattern.ext" value="${maven2.pattern}.[ext]" />
	
	<!-- pull in the local repository -->
	<include url="${ivy.default.conf.dir}/ivyconf-local.xml" />
	<settings defaultResolver="default" />
	<resolvers>
		
		<ibiblio name="maven2" root="${repo.maven.org}" pattern="${maven2.pattern.ext}" m2compatible="true" />
		<ibiblio name="apache-snapshot" root="${snapshot.apache.org}" pattern="${maven2.pattern.ext}" m2compatible="true" />
		
		<ssh name="technolous" host="technolous.com" publishPermissions="0660">
			<ivy pattern="/opt/repository/ivy/[module]/ivy.xml"/>
  			<artifact pattern="/opt/repository/[organisation]/[module]/[artifact]-[revision].[ext]"/>
		</ssh>

		<chain name="default" dual="true">
			<resolver ref="local" />
			<resolver ref="maven2" />
			<resolver ref="technolous" />
		</chain>
		<chain name="internal">
			<resolver ref="local" />
		</chain>
		<chain name="external">
			<resolver ref="maven2" />
		</chain>
		<chain name="team">
			<resolver ref="technolous" />
		</chain>
		<chain name="external-and-snapshots">
			<resolver ref="maven2" />
			<resolver ref="apache-snapshot" />
		</chain>
	</resolvers>
	<modules>
		<module organisation="com.dabeeb" name=".*" resolver="team" />
	</modules>
</ivysettings>
